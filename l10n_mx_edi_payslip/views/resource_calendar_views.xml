<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="resource_calendar_form" model="ir.ui.view">
        <field name="name">resource.calendar.view.form.l10n_mx_edi_payslip.inherit</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button
                        name="%(l10n_mx_edi_payslip.create_company_global_time_off_action)d"
                        string="Create Company Public Time Off"
                        type="action"
                        class="oe_highlight"
                    />
                </header>
            </xpath>
        </field>
    </record>

</odoo>
